<nav class="flex flex-wrap items-center justify-between p-4 bg-primary">
  <div>
    <img src="/imgs/logo.svg" class="inline-block w-8 h-8 text-white" alt="{{- config.name -}}" />
    <a class="inline-block text-white mx-2 my-2 border-b-2 border-primary hover:border-white" href="/">{{- config.name -}}</a>
  </div>

  <div class="flex md:hidden">
    <button class="focus:ring-0 focus:border-0" id="hamburger" style="height: 24px">
      <span class="toggle block text-white">
        <span class="material-icons">menu</span>
      </span>
      <span class="toggle hidden text-white">
        <span class="material-icons">close</span>
      </span>
    </button>
  </div>

  <div class="toggle hidden md:flex w-full md:w-auto text-left text-bold mt-5 md:mt-0 border-t-2 border-primary md:border-none">
    {%- for entry in navbar.entries -%}
      {%- if entry.url -%}
        {%- comment -%}Add a single entry.{%- endcomment -%}
        {%- assign entry_url = entry.url | url -%}
        <a
          class="block md:inline-block text-white mx-3 my-2 border-b-2 border-primary hover:border-white {% if entry_url == active_url %}text-color-primary{% endif %}"
          href="{{ entry.url }}"
        >
          {{- entry.name -}}
        </a>
      {%- endif -%}
    {%- endfor -%}
  </div>

  <script>
    document.getElementById("hamburger").onclick = function toggleMenu() {
      const navToggle = document.getElementsByClassName("toggle");
      for (let i = 0; i < navToggle.length; i++) {
        navToggle.item(i).classList.toggle("hidden");
      }
    };
  </script>
</nav>
