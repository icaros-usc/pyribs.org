---
layout: default
title: Publications
---

<div class="__publications__ p-4 max-w-screen-2xl mx-auto">

{%- for section in publications -%}

  <h2 class="text-4xl font-light mt-6 mb-3 pl-2">
    {{- section.title -}}
  </h2>
  {%- if section.message -%}
  <p class="pl-2 mb-2">
    {{- section.message -}}
  </p>
  {%- endif -%}
  <div class="w-full pb-6">
    {%- assign entries = section.entries | reverse -%}
    {%- for e in entries -%}
    <a href="{{- e.url -}}"
       class="flex flex-wrap group px-2 py-3 border-t-2 border-gray-100 w-full
              text-black">
      <div class="w-full md:w-7/12">
        <p class="font-bold md:mb-1 group-hover:text-secondary">
          {{- e.title -}}
        </p>
        <p class="text-base md:text-sm text-gray-500">
          {{- e.authors -}}
        </p>
      </div>
      <p class="text-sm md:text-base text-gray-500 md:group-hover:text-secondary
                w-5/6 md:w-1/3 md:pl-6">
        {{- e.container -}}<span class="md:hidden">, {{ e.year }}</span>
      </p>
      <p class="hidden md:block text-gray-500 md:group-hover:text-secondary
                text-right w-1/6 md:w-1/12">
        {{- e.year -}}
      </p>
    </a>
    {%- endfor -%}
  </div>

{%- endfor -%}

</div>
